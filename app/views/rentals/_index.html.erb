<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Rentals</div>
    <% if rentals.empty? %>
      <div class="panel-heading">There's no rentals yet</div>
    <% else %>
      <table class="table">
        <tbody>
          <tr><th>Book title</th><th>Author</th><th>User</th><th>Status</th></tr>
          <% rentals.each do |rental| %>
            <tr>
              <td><%= rental.book.title %></td>
              <td><%= rental.book.author %></td>
              <td><%= rental.user.email %></td>
              <td><%= rental.status %></td>
              <td><%= link_to "Show book", rental.book, class: "btn btn-default" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
</div>
